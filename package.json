{
	"name": "rabbithtml",
	"version": "1.0.0",
	"description": "RabbitHTML - a simple Vite template for static websites",
	"author": "Nuckle",
	"main": "index.js",
	"scripts": {
		"dev": "npm-run-all --parallel dev:*",
		"dev:vite": "vite --port 3000 --host",
		"dev:sass": "sass  --no-source-map --watch src/sass/style.scss:src/css/style.css",
		"build": "vite build --base=${npm_config_repository:-/} && npm-run-all --parallel build:* && npm run prettify",
		"build:sass": "sass  --no-source-map src/sass/style.scss:dist/css/style.css",
		"prettify": "glob-run js-beautify --editorconfig -r 'dist/**/*.html'",
		"preview": "vite preview --port 3001 --host"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^20.4.5",
		"autoprefixer": "^10.4.14",
		"crypto-js": "^4.1.1",
		"cssnano": "^6.0.1",
		"glob-run": "^0.1.7",
		"js-beautify": "^1.14.9",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.27",
		"postcss-cli": "^10.1.0",
		"sass": "^1.64.1",
		"vite": "^4.4.4",
		"vite-plugin-handlebars": "^1.6.0",
		"vite-plugin-imagemin": "^0.6.1",
		"vite-plugin-pwa": "^0.16.4",
		"vite-svg-sprite-wrapper": "^1.1.0"
	}
}
